{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",

    "module": "commonjs",
    "target": "ES2020",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src", "generated", "index.ts"],
  "exclude": ["node_modules", "dist", "prisma.config.ts"]
}
